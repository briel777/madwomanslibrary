<!-- Minimal Timer-Based Reading Pace Calculator -->
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Reading Pace Calculator (Madwoman's Library Book Club)</title>
  <style>
    :root{
      --bg:#0b0d10;
      --panel:#11161c;
      --muted:#9aa3ad;
      --accent:#70eab5;
      font-family:Inter,system-ui;
    }
    body{margin:0; background:var(--bg); color:#e8eff2; display:flex; justify-content:center; padding:30px}
    .container{width:100%; max-width:820px}
    h1{margin:0 0 6px 0; font-size:22px}
    p.lead{margin:0 0 20px; color:var(--muted)}

    .card{background:var(--panel); padding:20px; border-radius:14px; box-shadow:0 10px 28px rgba(0,0,0,0.45);}
    label{font-size:13px; color:var(--muted)}
    input{width:100%; background:#0d1117; border:1px solid #202830; color:#dce6eb; padding:10px; border-radius:8px; margin-top:6px; margin-bottom:14px; font-size:15px}

    button{background:#1a232c; border:1px solid #2b333e; color:#d0dde3; padding:10px 14px; font-size:14px; border-radius:8px; cursor:pointer}
    button.primary{background:var(--accent); color:#041414; border:none; font-weight:600}
    button:disabled{opacity:0.4; cursor:default}

    .row{display:flex; gap:12px; flex-wrap:wrap}
    .results{margin-top:18px; border-top:1px solid #1f262f; padding-top:18px}
    .result{display:flex; justify-content:space-between; margin-bottom:10px; font-size:15px}
    .value{font-weight:600}

    .timer-display{font-size:24px; font-weight:700; text-align:center; margin:12px 0}

  </style>
</head>
<body>
  <div class="container">
    <h1>Reading Pace Calculator</h1>
    <p class="lead">Madwoman's Library Book Club</p>

    <div class="card">

      <!-- ✅ TIMER -->
      <label>Reading timer</label>
      <div class="timer-display" id="timerDisplay">00:00</div>
      <div class="row">
        <button id="startBtn">Start</button>
        <button id="pauseBtn" disabled>Pause</button>
        <button id="stopBtn" disabled>Stop & Use Sample</button>
      </div>

      <label>Pages read during timer</label>
      <input id="samplePages" type="number" min="1" placeholder="e.g. 5" />

      <label>Total pages in book</label>
      <input id="totalPages" type="number" min="1" placeholder="e.g. 350" />

      <label>Pages already read</label>
      <input id="pagesRead" type="number" min="0" placeholder="e.g. 48" />

      <label>Days to finish</label>
      <input id="daysToFinish" type="number" min="1" placeholder="e.g. 15" />

      <button id="calcBtn" class="primary">Calculate</button>

      <!-- ✅ RESULTS → Only items 1,4,5 -->
      <div class="results">
        <div class="result"><span>Reading speed</span><span id="speed" class="value">—</span></div>
        <div class="result"><span>Time per day</span><span id="timePerDay" class="value">—</span></div>
        <div class="result"><span>Pages per day</span><span id="pagesPerDay" class="value">—</span></div>
      </div>

    </div>
  </div>

  <script>
    let seconds = 0;
    let timerInterval = null;

    const d = id => document.getElementById(id);

    function formatTime(s){
      const m = Math.floor(s/60);
      const sec = s % 60;
      return `${String(m).padStart(2,'0')}:${String(sec).padStart(2,'0')}`;
    }

    // ✅ Timer Controls
    d('startBtn').addEventListener('click', ()=>{
      if(timerInterval) return;
      timerInterval = setInterval(()=>{
        seconds++;
        d('timerDisplay').textContent = formatTime(seconds);
      },1000);
      d('pauseBtn').disabled = false;
      d('stopBtn').disabled = false;
      d('startBtn').disabled = true;
    });

    d('pauseBtn').addEventListener('click', ()=>{
      clearInterval(timerInterval);
      timerInterval = null;
      d('startBtn').disabled = false;
    });

    d('stopBtn').addEventListener('click', ()=>{
      clearInterval(timerInterval);
      timerInterval = null;
      d('startBtn').disabled = false;
      d('pauseBtn').disabled = true;
      d('stopBtn').disabled = true;
    });

    // ✅ Time formatting → convert to hours when > 60 min
    function formatMinutesAsHours(minFloat){
      if(minFloat <= 60) return `${Math.round(minFloat)} min/day`;
      const totalMin = Math.round(minFloat);
      const h = Math.floor(totalMin / 60);
      const m = totalMin % 60;
      return `${h} h ${m} min/day`;
    }

    // ✅ Calculation
    d('calcBtn').addEventListener('click', ()=>{
      const samplePages = parseFloat(d('samplePages').value);
      const totalPages = parseInt(d('totalPages').value);
      const pagesRead = parseInt(d('pagesRead').value) || 0;
      const days = parseInt(d('daysToFinish').value);

      if(!samplePages || samplePages <= 0){ alert('Enter pages read in sample.'); return; }
      if(seconds <= 0){ alert('Use the timer to measure reading time.'); return; }
      if(!totalPages || totalPages <= 0){ alert('Enter total pages.'); return; }
      if(pagesRead < 0 || pagesRead >= totalPages){ alert('Pages already read must be less than total pages.'); return; }
      if(!days || days < 1){ alert('Days must be 1 or more.'); return; }

      const minutes = seconds / 60;
      const ppm = samplePages / minutes; // pages per minute
      const pagesRemaining = totalPages - pagesRead;
      const totalMinutesNeeded = pagesRemaining / ppm;
      const minutesPerDay = totalMinutesNeeded / days;
      const pagesPerDay = pagesRemaining / days;

      d('speed').textContent = `${ppm.toFixed(2)} pages/min`;
      d('timePerDay').textContent = formatMinutesAsHours(minutesPerDay);
      d('pagesPerDay').textContent = `${Math.ceil(pagesPerDay)} pages/day`;
    });
  </script>

</body>
</html>
